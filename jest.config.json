{
  "testPathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/test/",
    "<rootDir>/dist/",
    ".history/"
  ],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "clearMocks": true,
  "modulePaths": [
    "<rootDir>/src/"
  ],
  "testURL": "http://localhost/"
}
